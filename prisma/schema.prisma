// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Session {
  id            String    @id @map("_id") @db.ObjectId // MongoDB requires an ID field, Mapped to Object ID
  shop          String    @unique // The shop domain (unique)
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String    @unique
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Product {
  id          String @id @map("_id") @db.ObjectId
  shopifyId   String @unique
  title       String
  price       Float
  createdAt   DateTime @default(now()) // Automatically set to the current date and time when created
}

model Order {
  id          String @id @map("_id") @db.ObjectId
  shopifyId   String @unique
  name        String
  totalPrice  Float
  createdAt   DateTime @default(now())
}
